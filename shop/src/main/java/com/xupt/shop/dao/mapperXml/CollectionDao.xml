<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.xupt.shop.dao.impl.CollectionDao">

    <delete id="deleteCollection" parameterType="int">
        delete from collection where id=#{id};
    </delete>

    <insert id="addCollection" parameterType="com.xupt.shop.bean.Collection">
        insert into collection values(null,#{user_id},#{commodity_id});
    </insert>
    <select id="findCollection" resultType="com.xupt.shop.bean.Collection">
        select * from collection where user_id=#{id};
    </select>

</mapper>