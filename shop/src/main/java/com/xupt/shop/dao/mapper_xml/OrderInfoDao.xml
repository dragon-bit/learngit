<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper>
    <select id="findOrderInfoByNum" parameterType="String">
        select * from order_info where order_num = #{Order_Num}
    </select>
    <insert id="addOrderInfo" parameterType="OrderInfo">
        insert into order_info values (null,user_id = #{user_id}, order_num = #{order_num}, commodity_id = #{commodity_id});
    </insert>
    <delete id="delOrderInfoByNum" parameterType="String">
        delete from order_info where order_num = #{OrderNum}
    </delete>
</mapper>